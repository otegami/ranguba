  <ol class="search_result_entries">
    <% @result_set.records.each do |entry| %>
      <li class="search_result_entry">
        <div class="search_result_entry_header">
          <span class="search_result_title">
            <%= link_to(entry.label, entry.url) %>
          </span>
          <span class="search_result_score">(<%= entry._score %>)</span>
          <span class="search_result_location">
            <%= link_to(entry.url, entry.url) %>
          </span>
        </div>
        <div class="search_result_summary"><%= entry.summary %></div>
        <ul class="search_result_drilldown_entries">
          <% entry.drilldown_entries.each do |entry| %>
            <li class="search_result_drilldown_<%= entry.key %>_entry">
              <%= drilldown_link(entry) %>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ol>
