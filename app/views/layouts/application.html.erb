<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <title><%= @title || @ranguba_template.title %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <% if @canonical %>
    <link rel="canonical" href="<%= @canonical %>" />
  <% end %>
  <%=raw @ranguba_template.head %>
</head>
<body>
  <div class="header">
    <%=raw @ranguba_template.header %>
  </div>
  <div class="content">
    <%= yield %>
  </div>
  <div class="footer">
    <%=raw @ranguba_template.footer %>
  </div>
</body>
</html>
